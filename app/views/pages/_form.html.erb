
<%= form_with(model: page, local: true) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group row">
    <%= form.label :rank, 'Sortierung', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.number_field :rank, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-2">
      <%= form.label :seo_url, 'URL Pfad', class: 'sr-only' %>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">http://herzmuht-grossharthau.de/</div>
        </div>
        <%= form.text_field :seo_url, class: 'form-control', required: 'required', placeholder: 'deine-wunsch-adresse-der-seite' %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :nav_name, 'Menüeintrag', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :nav_name, class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :title, 'Seitentitel', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :heading, 'Seitenüberschrift', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :heading, class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :body, 'Seiteninhalt' %>
    <%= form.rich_text_area :body %>
  </div>

  <br>
  <br>
  <div class="actions">
    <%= form.submit 'Seite speichern', class: 'btn btn-primary mb-2' %>
  </div>
<% end %>
