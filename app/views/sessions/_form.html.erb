<%= form_for :session, url: session_path do |form| %>
  <div class="form-group row">
    <%= form.label :email, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :email, type: 'email', class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: 'form-control', required: 'required' %>
    </div>
  </div>

  <div class="submit-field">
    <%= form.submit 'Anmelden', class: 'btn btn-primary' %>
  </div>
<% end %>
